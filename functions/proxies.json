{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "api": {
            "matchCondition": {
                "route": "/api/{*url}"
            },
            "backendUri": "https://%API_HOST%/api/{url}"
        },
        "spaRoot": {
            "matchCondition": {
                "route": "/"
            },
            "backendUri": "https://%SPA_HOST%/app/index.html"
        },
        "spa": {
            "matchCondition": {
                "route": "{*url}"
            },
            "backendUri": "https://%SPA_HOST%/app/{url}"
        }
    }
}
