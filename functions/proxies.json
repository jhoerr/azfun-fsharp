{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "api": {
            "matchCondition": {
                "route": "/api/{*url}"
            },
            "backendUri": "https://%API_HOST%/api/{url}"
        },
        "spaRoot": {
            "matchCondition": {
                "route": "/"
            },
            "backendUri": "https://%SPA_HOST%/app/index.html"
        },
        "spaIndex": {
            "matchCondition": {
                "route": "/index.html"
            },
            "backendUri": "https://%SPA_HOST%/app/index.html"
        },
        "spaManifest": {
            "matchCondition": {
                "route": "/manifest.json"
            },
            "backendUri": "https://%SPA_HOST%/app/manifest.json"
        },
        "spa": {
            "matchCondition": {
                "route": "/static/{*url}"
            },
            "backendUri": "https://%SPA_HOST%/app/static/{url}"
        },
        "spaRouting": {
            "matchCondition": {
                "route": "{*url}"
            },
            "backendUri": "https://%SPA_HOST%/app/index.html"
        }
    }
}
